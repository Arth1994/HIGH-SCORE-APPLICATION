<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="horizontal"    android:weightSum="100">    <TextView        android:id="@+id/score_number"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_weight="25"        android:hint="Score Number"/>    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_weight="25"        android:id="@+id/player_name"        android:textAlignment="center"        android:hint="Player Name"/>    <LinearLayout        android:orientation="vertical"        android:layout_weight="25"        android:textAlignment="center"        android:layout_width="match_parent"        android:layout_height="wrap_content">        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:textAlignment="center"            android:layout_gravity="center"            android:id="@+id/current_date"            android:hint="Current Date"/>        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:id="@+id/current_time"            android:hint="Current Time"            android:layout_weight="25"/>    </LinearLayout>    <TextView        android:textAlignment="center"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:hint="Score"        android:id="@+id/player_score"/></LinearLayout>